<root>
	<styles>
		<include src="file://{resources}/styles/csgostyles.css" />
		<include src="file://{resources}/styles/avatar.css" />
	</styles>

	<scripts>
		                                                                        
	</scripts>

	<snippets>
		<snippet name="AvatarPlayerCard">
			<Button class="avatar" onactivate="" acceptsinput="false" >
				<Panel class="avatar-image">
					<Panel>
						<Panel class="avatar-image__default"/>
						<CSGOAvatarImage id="JsAvatarImage" class="avatar-image__icon" defaultsrc="file://{images}/icons/ui/player.svg"/>
						<Image id="JsAvatarTeamColor" class="avatar-teamcolor" src="file://{images}/icons/ui/teamcolor.svg" texturewidth="32" textureheight="-1"/>
						                                                                                            
					</Panel>
				</Panel>
				<Panel class="avatar-flair">
					<Image id="JsAvatarFlair" class="avatar-flair__icon" src="" scaling="stretch-to-fit-preserve-aspect"/>
				</Panel>
			</Button>
		</snippet>

		<snippet name="AvatarParty" class="avatar-party-controls">
			<Button class="avatar avatar--party" onactivate="" >
				<Panel class="avatar-image">
					<Panel>
						<Panel class="avatar-image__default"/>
						<CSGOAvatarImage id="JsAvatarImage" class="avatar-image__icon"/>
						<Image id="JsAvatarTeamColor" class="avatar-teamcolor hidden" src="file://{images}/icons/ui/teamcolor.svg" texturewidth="32" textureheight="-1"/>
					</Panel>
				</Panel>
				<Panel class="avatar-flair">
					<Image id="JsAvatarFlair" class="avatar-flair__icon" src="" scaling="stretch-to-fit-preserve-aspect"/>
				</Panel>
				<Panel id="JsAvatarLeader" class="avatar-lobby-leader hidden">
					<Image class="avatar-flair__icon" src="file://{images}/icons/ui/leader.svg" scaling="stretch-to-fit-preserve-aspect" texturewidth="16" textureheight="-1"/>
				</Panel>
			</Button>
		</snippet>

		<snippet name="AvatarNoFlair">
			<Panel class="avatar">
				<Panel class="avatar-image">
					<Panel id="JsAvatarStatus" class="avatar-image__status"/>
					<CSGOAvatarImage id="JsAvatarImage" class="avatar-image__icon"/>
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<Panel class="" useglobalcontext="true">

		                                                
		
	</Panel>
</root>