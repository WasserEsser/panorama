<root>
	<styles>
		<include src="file://{resources}/styles/base.css" />
    <include src="file://{resources}/styles/csgostyles.css" />
    <include src="file://{resources}/styles/hud/hudmoney.css" />
	</styles>

	<CSGOMoneyPanel class="money" hittest="false" force-no-composition-layer="true">
    <Panel class="money-text">
      <Label class="money-text-label cl-hud-wash-color" text="${d:r:hud-money-amount}"/>
			<Image class="money-text-buy-icon cl-hud-wash-color" src="file://{images}/icons/ui/buyzone.svg" />
    </Panel>

    <CSGOMoneyAnimLabel id="Money-Add"      class="money-anim" text="+$999"/>
    <CSGOMoneyAnimLabel id="Money-AddFlash" class="money-anim" text="+$999"/>
    <CSGOMoneyAnimLabel id="Money-Remove"   class="money-anim" text="+$999"/>
	</CSGOMoneyPanel>
</root>
